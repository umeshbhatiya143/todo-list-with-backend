<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTittle %>
        </h1>
    </div>

    <div class="box">
        <% newListItem.forEach((item)=>{  %>
         <form action="/delete" method="post">
             <div class="item">
                 <input type="checkbox" name="checkbox" value="<%=item.id %>" onChange="this.form.submit()">
                 <p>
                     <%= item.name %>
                 </p>
             </div>
             <input type="hidden" name="listName" value=<%= listTittle %>>
         </form>
      <%  }) %>
      
            <form action="/" method="post" class="item">
                <input type="text" name="newItem" placeholder="New Item">
                <button type="submit" name="list" value="<%= listTittle %>">+</button>
            </form>
    </div>

<%- include("footer") -%>


